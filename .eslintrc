{
    "parser": "babel-eslint",
    "extends": "airbnb",
    "globals": {
        "__DEV__": true
    },
    "rules": {
        "linebreak-style"       : 1,
        "no-multi-spaces"       : 0,
        "import/extensions"     : 1,
        "import/no-unresolved"  : 1,
        "indent"                : 0,
        "key-spacing"           : [1, {"beforeColon": false, "afterColon": true}],
        "comma-dangle"          : 1,
        "no-unused-vars"        : 1,
        "no-useless-constructor": 1,
        "no-empty-function"     : 1,
        "class-methods-use-this": 1,
        "no-param-reassign"     : 1,
        "space-in-parens"       : 0 // [2, "always"]
    }
}
